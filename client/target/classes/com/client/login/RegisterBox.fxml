<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="register_view" alignment="CENTER" prefHeight="200.0" prefWidth="388.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.client.RegisterController">
   <children>
      <Label prefHeight="17.0" prefWidth="48.0" text="Register">
         <VBox.margin>
            <Insets bottom="10.0" />
         </VBox.margin>
      </Label>
      <HBox prefHeight="25.0" prefWidth="388.0">
         <children>
            <Label prefHeight="25.0" prefWidth="111.0" text="Username:">
               <HBox.margin>
                  <Insets left="10.0" />
               </HBox.margin>
            </Label>
            <TextField fx:id="username_text_field" prefHeight="9.0" prefWidth="149.0" />
            <Pane prefHeight="25.0" prefWidth="17.0" />
            <Label fx:id="username_error_label" prefHeight="25.0" prefWidth="93.0" textFill="RED" />
         </children>
      </HBox>
      <HBox prefHeight="25.0" prefWidth="388.0">
         <children>
            <Label prefHeight="25.0" prefWidth="112.0" text="Password:">
               <HBox.margin>
                  <Insets left="10.0" />
               </HBox.margin>
            </Label>
            <PasswordField fx:id="password_text_field" />
            <Pane prefHeight="25.0" prefWidth="17.0" />
            <Label fx:id="password_error_label" prefHeight="25.0" prefWidth="93.0" textFill="RED" />
         </children>
      </HBox>
      <HBox prefHeight="25.0" prefWidth="388.0">
         <children>
            <Label prefHeight="25.0" prefWidth="111.0" text="Confirm password:" />
            <PasswordField fx:id="confirm_password_text_field" />
            <Pane prefHeight="25.0" prefWidth="17.0" />
            <Label fx:id="confirm_password_error_label" prefHeight="25.0" prefWidth="93.0" textFill="RED" />
         </children>
         <VBox.margin>
            <Insets left="10.0" />
         </VBox.margin>
      </HBox>
      <HBox prefHeight="26.0" prefWidth="388.0">
         <children>
            <Pane prefHeight="26.0" prefWidth="173.0" />
            <Button fx:id="register_button" mnemonicParsing="false" onMouseClicked="#register" prefHeight="25.0" prefWidth="77.0" text="Register" />
            <Pane prefHeight="26.0" prefWidth="47.0" />
            <Label fx:id="back_to_login_label" onMouseClicked="#moveToLoginWindow" prefHeight="34.0" prefWidth="113.0" text="Back to login">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Label>
         </children>
         <VBox.margin>
            <Insets top="10.0" />
         </VBox.margin>
      </HBox>
      <Label fx:id="register_error_label" alignment="CENTER" prefHeight="17.0" prefWidth="113.0" textFill="RED">
         <VBox.margin>
            <Insets top="5.0" />
         </VBox.margin>
      </Label>
   </children>
</VBox>
